{
  "name": "ai-model-db-pro",
  "productName": "AI Model DB Pro",
  "private": true,
  "version": "0.3.21",
  "description": "A comprehensive database for tracking and managing AI models across multiple providers",
  "author": "AI Model DB Pro",
  "license": "MIT",
  "main": "electron/main.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/Jeremy8776/AIModelDB.git"
  },
  "scripts": {
    "dev": "vite",
    "dev:prod": "cross-env VITE_FORCE_PROD=true vite",
    "build": "vite build",
    "build:check": "tsc -b && vite build",
    "start": "vite preview --host 0.0.0.0 --port 5173",
    "preview": "vite preview",
    "serve": "cross-env VITE_USE_PROXY=true node server/index.js",
    "build:serve": "cross-env VITE_USE_PROXY=true npm run build && cross-env VITE_USE_PROXY=true node server/index.js",
    "e2e": "playwright test",
    "e2e:ui": "playwright test --ui",
    "e2e:headed": "playwright test --headed",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "electron:dev": "concurrently -k \"cross-env BROWSER=none npm run dev\" \"wait-on http://localhost:5173 && cross-env NODE_ENV=development electron .\"",
    "electron:build": "npm run build && electron-builder",
    "electron:build:win": "npm run build && electron-builder --win",
    "electron:build:mac": "npm run build && electron-builder --mac",
    "electron:build:linux": "npm run build && electron-builder --linux",
    "electron:start": "cross-env NODE_ENV=production electron .",
    "electron:publish": "npm run build && electron-builder --publish always"
  },
  "dependencies": {
    "@tanstack/react-virtual": "^3.13.13",
    "@vitalets/google-translate-api": "^9.2.1",
    "cheerio": "^1.0.0-rc.12",
    "electron-squirrel-startup": "^1.0.1",
    "electron-updater": "^6.6.2",
    "express": "^4.19.2",
    "http-proxy-middleware": "^2.0.6",
    "lucide-react": "^0.452.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "xlsx": "^0.18.5"
  },
  "devDependencies": {
    "@playwright/test": "^1.57.0",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.1",
    "@types/react": "^18.2.55",
    "@types/react-dom": "^18.2.19",
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.17",
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "electron": "^28.1.0",
    "electron-builder": "^24.9.1",
    "jsdom": "^27.3.0",
    "postcss": "^8.4.35",
    "puppeteer": "^24.16.1",
    "tailwindcss": "^3.4.1",
    "typescript": "^5.4.0",
    "vite": "^7.2.2",
    "vitest": "^4.0.16",
    "wait-on": "^7.2.0"
  },
  "build": {
    "appId": "com.aimodeldb.pro",
    "productName": "AI Model DB Pro",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "electron/**/*",
      "public/**/*"
    ],
    "publish": {
      "provider": "github",
      "owner": "Jeremy8776",
      "repo": "AIModelDB"
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "public/icons/win/icon.ico"
    },
    "mac": {
      "target": "dmg",
      "icon": "public/icons/mac/icon.icns",
      "category": "public.app-category.developer-tools",
      "hardenedRuntime": true,
      "gatekeeperAssess": false,
      "entitlements": "electron/entitlements.mac.plist",
      "entitlementsInherit": "electron/entitlements.mac.plist",
      "notarize": false,
      "artifactName": "AI-Model-DB-Pro.dmg"
    },
    "dmg": {
      "background": "resources/dmg_background.png",
      "iconSize": 100,
      "window": {
        "width": 540,
        "height": 380
      },
      "contents": [
        {
          "x": 130,
          "y": 190,
          "type": "file"
        },
        {
          "x": 410,
          "y": 190,
          "type": "link",
          "path": "/Applications"
        }
      ]
    },
    "linux": {
      "target": "AppImage",
      "icon": "public/icons/png",
      "category": "Development",
      "artifactName": "AI-Model-DB-Pro.AppImage"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": true,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "runAfterFinish": true,
      "installerHeader": "build/installerHeader.bmp",
      "installerSidebar": "build/installerSidebar.bmp",
      "license": "build/license.txt",
      "include": "build/installer.nsh",
      "artifactName": "AI-Model-DB-Pro-Setup.exe"
    }
  }
}